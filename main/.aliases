# No Vi
alias vi='vim'
alias e='emacsclient -a vim -t'

# StarWars
alias sw='telnet towel.blinkenlights.nl'

# Make sure ls has colors and defaults to -h
if ls --color -d . >/dev/null 2>&1; then
    alias ls='ls --color=auto -h'
    alias la='ls --color=auto -lah'
else
    alias ls='ls -h'
    alias la='ls -lah'
fi

# Jira
alias j='open https://improbableio.atlassian.net/browse/$(git rev-parse --abbrev-ref HEAD)'

# Docker
alias dr='docker run -it --rm'

# Whats My IP
alias wmi='dig +short myip.opendns.com @resolver1.opendns.com'

# Pretty Clear
alias clear='clear && figlet $USER 2>/dev/null | lolcat 2>/dev/null'

# Gource
alias gitvid='gource --user-image-dir ./avatars --key --highlight-all-users --hide filenames --seconds-per-day 0.1 --auto-skip-seconds 1 -1280x720 -o - | ffmpeg -y -r 60 -f image2pipe -vcodec ppm -i - -vcodec libx264 -preset ultrafast -pix_fmt yuv420p -crf 1 -threads 0 -bf 0'

# Proxy
